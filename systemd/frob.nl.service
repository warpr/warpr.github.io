[Unit]
Description=frob.nl
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill frob
ExecStartPre=-/usr/bin/docker rm frob
ExecStart=/usr/bin/docker run --name frob --publish 80:80 --publish 443:443 frob/frob.nl

[Install]
WantedBy=multi-user.target

